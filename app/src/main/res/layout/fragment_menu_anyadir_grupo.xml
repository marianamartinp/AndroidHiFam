<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mariana.androidhifam.MenuAnyadirGrupoFragment">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/botonAtras"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/chevrondowngrey"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/botonGrupoExistente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/nunito_bold"
        style="@style/CustomButtonStyle"
        android:text="@string/ingresarEnGrupoExistente"
        android:textAlignment="center"
        android:textColor="@color/eggWhite"
        android:textColorLink="#682D2D"
        android:textSize="16sp"
        android:backgroundTint="@color/orange"/>

    <Button
        android:id="@+id/botonNuevoGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        style="@style/CustomButtonStyle"
        android:text="@string/crearNuevoGrupo"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/eggWhite"
        android:textAlignment="center"
        android:backgroundTint="@color/orange"/>
    </LinearLayout>

</layout>