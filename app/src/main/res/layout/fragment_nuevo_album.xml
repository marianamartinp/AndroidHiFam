<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NuevoAlbumFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_marginTop="-95dp"
            app:layout_constraintTop_toBottomOf="@id/marco"
            android:alpha=".5"
            app:srcCompat="@drawable/sombra2" />

        <ImageView
            android:id="@+id/marco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/base_marco_publicacion"
            app:layout_constraintDimensionRatio="H,12:15"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/marco"
            app:layout_constraintEnd_toEndOf="@id/marco"
            app:layout_constraintTop_toTopOf="@id/marco"
            app:layout_constraintBottom_toBottomOf="@id/marco">

            <ImageView
                android:id="@+id/botonAtras"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/chevronleftgrey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/datos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="W,1:1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/nuevoAlbum"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito_bold"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
                android:text="@string/nuevoAlbum"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintStart_toEndOf="@id/botonAtras"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/datos"
                app:layout_constraintVertical_weight="2"/>

            <TextView
                android:id="@+id/datos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito_bold"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
                android:text="@string/nuevaFamiliaDatos"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tituloGrupoAlbum"
                app:layout_constraintVertical_weight="2"/>

            <TextView
                android:id="@+id/tituloGrupoAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito_bold"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
                android:text="@string/grupoAlbum"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/datos"
                app:layout_constraintBottom_toTopOf="@id/tituloAlbum"
                app:layout_constraintVertical_weight="2"/>

            <EditText
                android:id="@+id/tituloAlbum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLength="30"
                android:gravity="start"
                android:fontFamily="@font/nunito_bold"
                android:textSize="14sp"
                android:hint="@string/nuevoAlbumTitulo"
                app:layout_constraintTop_toBottomOf="@id/tituloGrupoAlbum"
                app:layout_constraintBottom_toTopOf="@id/descripcionAlbum"
                android:background="@drawable/contorno_gris"
                app:layout_constraintVertical_weight="1"/>


            <EditText
                android:id="@+id/descripcionAlbum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLength="70"
                android:gravity="start"
                android:fontFamily="@font/nunito_bold"
                android:textSize="14sp"
                android:hint="@string/nuevoAlbumDescripcion"
                app:layout_constraintTop_toBottomOf="@id/tituloAlbum"
                app:layout_constraintBottom_toTopOf="@id/tipoAlbum"
                android:background="@drawable/contorno_gris"
                app:layout_constraintVertical_weight="1.9"/>

            <TextView
                android:id="@+id/tipoAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintVertical_weight="2"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito_bold"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
                android:text="@string/tipoAlbum"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/descripcionAlbum"
                app:layout_constraintBottom_toTopOf="@id/radiogroup"/>

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/contorno_gris"
                app:layout_constraintTop_toBottomOf="@id/tipoAlbum"
                app:layout_constraintBottom_toTopOf="@id/baseWarning">
                    <RadioButton
                        android:id="@+id/radioButtonColectivo"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/darkGrey"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/radioButtonAlbumColectivo"
                        android:checked="true"
                        android:layoutDirection="rtl"/>
                    <RadioButton
                        android:id="@+id/radioButtonIndividual"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/darkGrey"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:text="@string/radioButtonAlbumIndividual"/>
            </RadioGroup>
            <ImageView
                android:id="@+id/baseWarning"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/base_comentario"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toBottomOf="@id/radiogroup"
                app:layout_constraintBottom_toTopOf="@id/botonNuevoAlbum"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"/>
            <ImageView
                android:id="@+id/iconoWarning"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="Icon warning"
                android:src="@drawable/infofull"
                app:layout_constraintTop_toTopOf="@id/baseWarning"
                app:layout_constraintBottom_toBottomOf="@id/baseWarning"
                app:layout_constraintStart_toStartOf="@id/baseWarning"
                app:layout_constraintDimensionRatio="W,1:1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/warningAdmin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="25dp"
                android:fontFamily="@font/nunito_bold"
                android:textSize="14sp"
                android:textColor="@color/darkGrey"
                android:text="@string/warningAlbum"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@id/iconoWarning"
                app:layout_constraintEnd_toEndOf="@id/baseWarning"
                app:layout_constraintTop_toTopOf="@id/baseWarning"
                app:layout_constraintBottom_toBottomOf="@id/baseWarning"/>
            <ImageButton
                android:id="@+id/botonNuevoAlbum"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/botonnuevo"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_weight="1.2"
                app:layout_constraintTop_toBottomOf="@id/baseWarning"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>