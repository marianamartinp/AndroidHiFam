<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NuevoAlbumFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_marginTop="-95dp"
            app:layout_constraintTop_toBottomOf="@id/marco"
            android:alpha=".5"
            app:srcCompat="@drawable/sombra2" />

        <ImageView
            android:id="@+id/marco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/base_marco_publicacion"
            app:layout_constraintDimensionRatio="H,12:15"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/marco"
            app:layout_constraintEnd_toEndOf="@id/marco"
            app:layout_constraintTop_toTopOf="@id/marco"
            app:layout_constraintBottom_toBottomOf="@id/marco">

            <ImageView
                android:id="@+id/botonAtras"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/chevronleftgrey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/datos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="W,1:1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/nuevaFamilia"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito_bold"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
                android:text="@string/nuevaFamilia"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintStart_toEndOf="@id/botonAtras"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/datos"
                app:layout_constraintVertical_weight="1"/>

            <TextView
                android:id="@+id/datos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito_bold"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
                android:text="@string/nuevaFamiliaDatos"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/grupoAlbum"
                app:layout_constraintVertical_weight="1"/>

            <TextView
                android:id="@+id/grupoAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito_bold"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
                android:text="@string/grupoAlbum"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/datos"
                app:layout_constraintBottom_toTopOf="@id/tituloFamilia"
                app:layout_constraintVertical_weight="1"/>

            <EditText
                android:id="@+id/tituloFamilia"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLength="30"
                android:gravity="start"
                android:fontFamily="@font/nunito_bold"
                android:textSize="14sp"
                android:hint="@string/nuevoAlbumTitulo"
                app:layout_constraintTop_toBottomOf="@id/grupoAlbum"
                app:layout_constraintBottom_toTopOf="@id/descripcionAlbum"
                android:background="@drawable/contorno_gris"
                app:layout_constraintVertical_weight="1"/>


            <EditText
                android:id="@+id/descripcionAlbum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLength="70"
                android:gravity="start"
                android:fontFamily="@font/nunito_bold"
                android:textSize="14sp"
                android:hint="@string/nuevoAlbumDescripcion"
                app:layout_constraintTop_toBottomOf="@id/tituloFamilia"
                app:layout_constraintBottom_toTopOf="@id/tituloMiembros"
                android:background="@drawable/contorno_gris"
                app:layout_constraintVertical_weight="2"/>

            <TextView
                android:id="@+id/tituloMiembros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito_bold"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
                android:text="@string/nuevaFamiliaMiembros"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/descripcionAlbum"
                app:layout_constraintBottom_toTopOf="@id/usuarioFamilia"/>

            <EditText
                android:id="@+id/usuarioFamilia"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintHorizontal_weight="7"
                android:layout_marginEnd="3dp"
                android:maxLength="30"
                android:gravity="start"
                android:fontFamily="@font/nunito_bold"
                android:textSize="14sp"
                android:hint="@string/nuevaFamiliaAnyadirUsuario"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/botonAnyadirUsuario"
                app:layout_constraintTop_toBottomOf="@id/tituloMiembros"
                app:layout_constraintBottom_toTopOf="@id/miembrosGrupo"
                android:background="@drawable/contorno_gris"/>

            <ImageButton
                android:id="@+id/botonAnyadirUsuario"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/plus"
                android:layout_marginBottom="10dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@id/tituloMiembros"
                app:layout_constraintBottom_toTopOf="@id/miembrosGrupo"
                app:layout_constraintStart_toEndOf="@id/usuarioFamilia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_weight="1"/>

            <TextView
                android:id="@+id/textoAlternativo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/usuariosVacios"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/mediumGrey"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@id/miembrosGrupo"
                app:layout_constraintBottom_toBottomOf="@id/miembrosGrupo"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/miembrosGrupo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintVertical_weight="4.3"
                app:layout_constraintBottom_toTopOf="@id/botonNuevaFamilia"
                app:layout_constraintTop_toBottomOf="@id/usuarioFamilia"/>

            <ImageButton
                android:id="@+id/botonNuevaFamilia"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/botonnuevo"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_weight="1.4"
                app:layout_constraintTop_toBottomOf="@id/miembrosGrupo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>