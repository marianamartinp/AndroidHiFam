<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SolicitudesEntradaGrupoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/botonAtras"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/chevronleftgrey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/baseWarning"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="W,1:1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"/>

            <TextView
                android:id="@+id/tituloModal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="25dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito_bold"
                android:textSize="16sp"
                android:textColor="@color/darkGrey"
                android:text="@string/solicitudesEntradaGrupo"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintStart_toEndOf="@id/botonAtras"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/baseWarning"/>

            <ImageView
                android:id="@+id/baseWarning"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/base_comentario"
                app:layout_constraintVertical_weight="2"
                app:layout_constraintTop_toBottomOf="@id/tituloModal"
                app:layout_constraintBottom_toTopOf="@id/tituloUsuarios"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:id="@+id/iconoWarning"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="Icon warning"
                android:src="@drawable/infofull"
                app:layout_constraintTop_toTopOf="@id/baseWarning"
                app:layout_constraintBottom_toBottomOf="@id/baseWarning"
                app:layout_constraintStart_toStartOf="@id/baseWarning"
                app:layout_constraintDimensionRatio="W,1:1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/warningAdmin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nunito_bold"
                android:textSize="14sp"
                android:textColor="@color/darkGrey"
                android:text="@string/solicitudesEntradaInfo"
                android:justificationMode="inter_word"
                app:layout_constraintStart_toEndOf="@id/iconoWarning"
                app:layout_constraintEnd_toEndOf="@id/baseWarning"
                app:layout_constraintTop_toTopOf="@id/baseWarning"
                app:layout_constraintBottom_toBottomOf="@id/baseWarning"/>

            <TextView
                android:id="@+id/tituloUsuarios"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/headerUsuariosSolicitudes"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/darkGrey"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:visibility="visible"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toBottomOf="@id/baseWarning"
                app:layout_constraintBottom_toTopOf="@id/miembrosGrupo"/>

            <TextView
                android:id="@+id/textoAlternativo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/textoAlternativo"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/mediumGrey"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@id/miembrosGrupo"
                app:layout_constraintBottom_toBottomOf="@id/miembrosGrupo"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/miembrosGrupo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintVertical_weight="14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tituloUsuarios"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>