<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TabDetallesGrupoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/codigoGrupo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/nunito_bold"
            android:textSize="16sp"
            android:textColor="@color/darkGrey"
            android:text="@string/codigoGrupo"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/editextCodigoGrupo"
            app:layout_constraintTop_toTopOf="@id/editextCodigoGrupo"
            app:layout_constraintBottom_toBottomOf="@id/editextCodigoGrupo"
            app:layout_constraintVertical_weight="1"/>

        <EditText
            android:id="@+id/editextCodigoGrupo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:maxLength="30"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:maxLines="2"
            android:inputType="none"
            android:textAlignment="center"
            android:textColor="@color/mediumGrey"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@id/codigoGrupo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/editextFechaCreacion"
            android:background="@drawable/contorno_gris"
            app:layout_constraintVertical_weight="1"/>

        <TextView
            android:id="@+id/fechaCreacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/nunito_bold"
            android:textSize="16sp"
            android:textColor="@color/darkGrey"
            android:text="@string/fechaCreacionGrupo"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/editextFechaCreacion"
            app:layout_constraintTop_toTopOf="@id/editextFechaCreacion"
            app:layout_constraintBottom_toBottomOf="@id/editextFechaCreacion"
            app:layout_constraintVertical_weight="1"/>

        <EditText
            android:id="@+id/editextFechaCreacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:maxLength="30"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:maxLines="2"
            android:inputType="none"
            android:enabled="false"
            android:textColor="@color/mediumGrey"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@id/fechaCreacion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editextCodigoGrupo"
            app:layout_constraintBottom_toTopOf="@id/editextAdminGrupo"
            android:background="@drawable/contorno_gris"
            app:layout_constraintVertical_weight="1"/>

        <TextView
            android:id="@+id/adminGrupo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/nunito_bold"
            android:textSize="16sp"
            android:textColor="@color/darkGrey"
            android:text="@string/adminGrupo"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/editextAdminGrupo"
            app:layout_constraintTop_toTopOf="@id/editextAdminGrupo"
            app:layout_constraintBottom_toBottomOf="@id/editextAdminGrupo"
            app:layout_constraintVertical_weight="1"/>

        <EditText
            android:id="@+id/editextAdminGrupo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:maxLength="30"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:maxLines="2"
            android:inputType="none"
            android:enabled="false"
            android:textColor="@color/mediumGrey"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@id/adminGrupo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editextFechaCreacion"
            app:layout_constraintBottom_toTopOf="@id/editextTituloFamilia"
            android:background="@drawable/contorno_gris"
            app:layout_constraintVertical_weight="1"/>

        <EditText
            android:id="@+id/editextTituloFamilia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxLength="30"
            android:gravity="start"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:maxLines="4"
            android:inputType="none"
            android:enabled="false"
            android:textColor="@color/darkGrey"
            android:hint="@string/nuevaFamiliaTitulo"
            app:layout_constraintTop_toBottomOf="@id/editextAdminGrupo"
            app:layout_constraintBottom_toTopOf="@id/editextDescripcionFamilia"
            android:background="@drawable/contorno_gris"
            app:layout_constraintVertical_weight="1"/>


        <EditText
            android:id="@+id/editextDescripcionFamilia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxLength="70"
            android:gravity="start"
            android:inputType="none"
            android:enabled="false"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:textColor="@color/darkGrey"
            android:hint="@string/nuevaFamiliaDescripcion"
            app:layout_constraintTop_toBottomOf="@id/editextTituloFamilia"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/contorno_gris"
            app:layout_constraintVertical_weight="2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>