<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TabDetallesUsuarioFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/nombreCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/nunito_bold"
            android:textSize="16sp"
            android:textColor="@color/darkGrey"
            android:text="@string/nombreCompletoUsuario"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/editextNombreCompleto"
            app:layout_constraintVertical_weight="1"/>

        <EditText
            android:id="@+id/editextNombreCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:maxLength="30"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:maxLines="2"
            android:inputType="none"
            android:textAlignment="center"
            android:hint="@string/nombrePlaceholder"
            android:textColor="@color/darkGrey"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintTop_toBottomOf="@id/nombreCompleto"
            app:layout_constraintBottom_toTopOf="@id/usuarioUsuario"
            android:background="@drawable/contorno_gris"
            app:layout_constraintVertical_weight="1"/>

        <TextView
            android:id="@+id/usuarioUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/nunito_bold"
            android:textSize="16sp"
            android:textColor="@color/darkGrey"
            android:text="@string/usuarioUsuario"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/editextUsuario"
            app:layout_constraintTop_toBottomOf="@id/editextNombreCompleto"
            app:layout_constraintBottom_toTopOf="@id/editextUsuario"
            app:layout_constraintVertical_weight="1"/>

        <EditText
            android:id="@+id/editextUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:maxLength="30"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:maxLines="2"
            android:hint="@string/usuarioPlaceholder"
            android:textColor="@color/darkGrey"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/editextFechaNacimiento"
            app:layout_constraintTop_toBottomOf="@id/usuarioUsuario"
            app:layout_constraintBottom_toTopOf="@id/telefonoUsuario"
            android:background="@drawable/contorno_gris"
            app:layout_constraintVertical_weight="1"/>

        <TextView
            android:id="@+id/fechaNacimiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/nunito_bold"
            android:textSize="16sp"
            android:textColor="@color/darkGrey"
            android:text="@string/fechaNacimientoUsuario"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/editextFechaNacimiento"
            app:layout_constraintEnd_toEndOf="@id/editextFechaNacimiento"
            app:layout_constraintTop_toBottomOf="@id/editextNombreCompleto"
            app:layout_constraintBottom_toTopOf="@id/editextFechaNacimiento"
            app:layout_constraintVertical_weight="1"/>

        <EditText
            android:id="@+id/editextFechaNacimiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:maxLength="30"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:hint="@string/nacimientoPlaceholder"
            android:textSize="14sp"
            android:maxLines="2"
            android:inputType="none"
            android:enabled="false"
            android:textColor="@color/darkGrey"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@id/editextUsuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fechaNacimiento"
            app:layout_constraintBottom_toTopOf="@id/telefonoUsuario"
            android:background="@drawable/contorno_gris"
            app:layout_constraintVertical_weight="1"/>

        <TextView
            android:id="@+id/telefonoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/nunito_bold"
            android:textSize="16sp"
            android:textColor="@color/darkGrey"
            android:text="@string/telefonoUsuario"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toBottomOf="@id/editextFechaNacimiento"
            app:layout_constraintBottom_toTopOf="@id/editextTelefono"
            app:layout_constraintVertical_weight="1"/>

        <TextView
            android:id="@+id/simboloMas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:textSize="20sp"
            android:text="+"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/darkGrey"
            android:layout_marginEnd="10dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/editextPrefijo"
            app:layout_constraintTop_toBottomOf="@id/telefonoUsuario"
            app:layout_constraintBottom_toTopOf="@id/correoUsuario"/>

        <EditText
            android:id="@+id/editextPrefijo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:maxLength="3"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:textSize="16sp"
            android:textColor="@color/darkGrey"
            android:text="@string/prefijoPorDefecto"
            android:hint="@string/prefijoTelefonoPlaceholder"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@id/simboloMas"
            app:layout_constraintEnd_toStartOf="@id/editextTelefono"
            app:layout_constraintTop_toBottomOf="@id/telefonoUsuario"
            app:layout_constraintBottom_toTopOf="@id/correoUsuario"
            android:background="@drawable/contorno_gris"
            app:layout_constraintVertical_weight="1"/>

        <EditText
            android:id="@+id/editextTelefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="number"
            android:maxLength="30"
            android:gravity="center_vertical"
            android:fontFamily="@font/nunito_bold"
            android:textSize="16sp"
            android:textColor="@color/darkGrey"
            android:hint="@string/telefonoPlaceholder"
            android:maxLines="1"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintStart_toEndOf="@id/editextPrefijo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/telefonoUsuario"
            app:layout_constraintBottom_toTopOf="@id/correoUsuario"
            android:background="@drawable/contorno_gris"
            app:layout_constraintVertical_weight="1"/>

        <TextView
            android:id="@+id/correoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/nunito_bold"
            android:textSize="16sp"
            android:textColor="@color/darkGrey"
            android:text="@string/emailUsuario"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toBottomOf="@id/editextTelefono"
            app:layout_constraintBottom_toTopOf="@id/editextCorreoElectronico"
            app:layout_constraintVertical_weight="1"/>

        <EditText
            android:id="@+id/editextCorreoElectronico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:maxLength="30"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:hint="@string/correoElectronicoPlaceholder"
            android:textSize="14sp"
            android:maxLines="2"
            android:textColor="@color/darkGrey"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintTop_toBottomOf="@id/correoUsuario"
            app:layout_constraintBottom_toTopOf="@id/botonCambiarContrasenya"
            android:background="@drawable/contorno_gris"
            app:layout_constraintVertical_weight="1"/>

        <Button
            android:id="@+id/botonCambiarContrasenya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            style="@style/CustomButtonStyle"
            android:text="@string/botonModificarContrasenya"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_bold"
            app:layout_constraintTop_toBottomOf="@id/editextCorreoElectronico"
            app:layout_constraintBottom_toTopOf="@id/botonEliminarUsuario"
            android:textColor="@color/eggWhite"
            android:textAlignment="center"
            android:backgroundTint="@color/orange"/>

        <Button
            android:id="@+id/botonEliminarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            style="@style/CustomButtonStyle"
            android:text="@string/botonEliminarUsuario"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_bold"
            app:layout_constraintTop_toBottomOf="@id/botonCambiarContrasenya"
            app:layout_constraintBottom_toTopOf="@id/botonModificarUsuario"
            android:textColor="@color/eggWhite"
            android:textAlignment="center"
            android:backgroundTint="@color/orange"/>

        <ImageButton
            android:id="@+id/botonModificarUsuario"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/botonnuevo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/botonEliminarUsuario"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>